# Line endings
* text=auto eol=lf

# Windows shell scripts use CRLF
*.bat text eol=crlf

# Common text files (force LF)
*.js  text eol=lf
*.jsx text eol=lf
*.ts  text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md  text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.env* text eol=lf
*.sh  text eol=lf

# Treat lockfiles as text (default merge)
package-lock.json text eol=lf
pnpm-lock.yaml    text eol=lf
yarn.lock         text eol=lf

# Binary files
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.webp binary
*.ico  binary
*.pdf  binary
*.zip  binary
*.gz   binary
*.7z   binary
*.mp4  binary
*.mov  binary
*.avi  binary
*.mp3  binary
*.wav  binary
*.eot  binary
*.ttf  binary
*.otf  binary
*.woff binary
*.woff2 binary